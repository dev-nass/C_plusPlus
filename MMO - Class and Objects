#include <iostream>
#include <string>
using namespace std;

class playerInfo {
	public:
		string userName;
		string type;
		int hp;
		int mp;
		int level;
		int exp;
};

int main () {
	playerInfo info1;
	info1.userName = "Ronald";
	info1.type = "Mage";
	info1.hp = 500;
	info1.mp = 1000;
	info1.level = 58;
	info1.exp = 9999;

	playerInfo info2;
	info2.userName = "Jonas";
	info2.type = "Figther";
	info2.hp = 1000;
	info2.mp = 500;
	info2.level = 59;
	info2.exp = 9999;

	cout << "Player Name: " << info1.userName << endl << "Class type: " << info1.type << endl << "HP: " << info1.hp << endl << "MP: "<< info1.mp << endl << "Level: " <<info1.level << endl << "EXP: " << info1.exp << endl;
	cout << endl;
	cout << "Player Name: " << info2.userName << endl << "Class type: " << info2. type << endl << "HP: " << info2.hp << endl << "MP: " <<info2.mp << endl << "Leel: " << info2.level << endl << "EXP: " << info2.exp << endl;

	return 0;
}
